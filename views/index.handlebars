<h1>burgers!</h1>

<h2>Burgers that are not Available!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}               
            <li>
                {{burger_name}}
                <button class="eat-burger" data-id="{{this.id}}">
                    DEVOUR
                </button>
            </li>
        {{/unless}} 
     {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>
                <button class="eaten" data-id="{{this.id}}">
                     {{burger_name}}
                </button>
            </li>  
        {{/if}} 
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="ca">Burger Type:</label>
        <input type="text" id="ca" name="burger_name">
    </div>

    <button type="submit">Add burger</button>
</form>