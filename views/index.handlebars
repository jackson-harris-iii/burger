<div class="row">
    <div class="card-panel orange lighten-2 hoverable">
        <form class="create-form">
            <div class="form-group">
                <label class=" black-text"for="ca">Burger Type:</label>
                <input type="text" id="ca" name="burger_name">
            </div>

            <button class="waves-effect waves-light btn-small green" type="submit">Add burger</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col s6">
        <h4 class='text-center'>Burgers that are Available!</h4>
        
        <ul>
            {{#each burgers}} {{#unless devoured}}
                <li>
                    <div class="row card-panel hoverable orange lighten-2">
                        <div class="col s6">
                                <h5>{{burger_name}}</h5>
                        </div>        
                        <div class="col s6">
                            <button class="eat-burger btn-floating btn-large waves-effect waves-light red pulse" data-id="{{this.id}}">
                                EAT
                            </button>
                        </div>  
                    </div>
                </li>
            {{/unless}} {{/each}}
        </ul>
    </div>

    <div class="col s6">
        <h4 class="center">Burgers that have been eaten!</h4>
        
        <ul>
            {{#each burgers}} {{#if devoured}}
            <li>
                <div>
                    <button class="eaten waves-effect waves-light btn-large disabled" data-id="{{this.id}}">
                        {{burger_name}}
                    </button>
            </li>
            <br>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>

